%div#page-info
	%span#title
		All Featured Events
	%span#desc
%br{:style => "clear:both;"}
%div
	-@events.each do |event|
		%div#each
			%div#event_cover.thumbnail-wrapper
				=link_to (image_tag event.image_url(:thumb).to_s), event_path(event) 
				%div#event_title.item-title-wrapper
					%p.item-title
						=event.title	
%br{:style => "clear:both"}
=paginate @events
