#top_header
  #wrapper
    %span#promote New to Peekbox TV. The most Interactive thing happening on the Web!
    %a{:href => "#"}
      #tour
        %span
          %a
            = link_to 'Take a tour', help_path
    %div#sign_status
      %center
        %span
          -if user_signed_in?

            = link_to 'Dashboard' , profile_path
            |
            = link_to 'Sign out', destroy_user_session_path, :method => :delete
          -else

            = link_to 'Sign in', new_user_session_path, :class => :iframe
            or
            = link_to 'Register', new_user_registration_path
    /
      <div id="login">
      <haml:loud> image_tag(&quot;layout/login.png&quot;) </haml:loud>
      <a href="#">Log In</a>

      </div>
#header
  #header_wrapper
    #image
      = image_tag("logo.png")
    #nav
      %ul
        = link_to root_path do
          %li
            %span
              Home
            %div

        = link_to videos_path do
          %li{:onmouseout => "document.getElementById('sub_item').style.display = 'none';", :onmouseover => "document.getElementById('sub_item').style.display = 'block';"}
            %span
              Videos
            %div{:id => "sub_item"}
              %ul.sublist
                = link_to profile_video_bookmark_index_path do
                  %li.list_item My Peek

                = link_to profile_videos_path do
                  %li.list_item View Videos

                = link_to new_profile_video_path do
                  %li.list_item Add Video

        = link_to albums_path do
          %li{:onmouseout => "document.getElementById('sub_item2').style.display = 'none';", :onmouseover => "document.getElementById('sub_item2').style.display = 'block';"}
            %span
              Gallery
            %div{:id => "sub_item2"}
              %ul.sublist2
                = link_to profile_picture_bookmark_index_path do
                  %li.list_item2 My Peek

                = link_to profile_albums_path do
                  %li.list_item2 View Albums

                = link_to new_profile_album_path do
                  %li.list_item2 Add Photos

        = link_to events_path do
          %li{:onmouseout => "document.getElementById('sub_item3').style.display = 'none';", :onmouseover => "document.getElementById('sub_item3').style.display = 'block';"}
            %span
              Events
            %div{:id => "sub_item3"}
              %ul.sublist3
                = link_to profile_bookmark_index_path do
                  %li.list_item3 My Peek

                = link_to profile_events_path do
                  %li.list_item3 View Events

                = link_to new_profile_event_path do
                  %li.list_item3 Add Events

        %a{:href => "http://pilipinasproductions.com", :target => "_blank"}
          %li#last
            %span
              Company

    -if user_signed_in?
      #profile
        #profile_pic
          - if current_user.profilepic?

            - profilepic = current_user.profilepic
            = image_tag("#{profilepic}")
          - else
            = image_tag("no-profile-pic.jpg")

        = link_to other_user_path(current_user.username) do
          %span
            = current_user.username
      /%button.signup Log out