!!! 5
%head
	%title 
		Peekbox
	= stylesheet_link_tag "application"
	= javascript_include_tag "application"
	= javascript_include_tag "http://w.sharethis.com/button/buttons.js"
	%script
		stLight.options({publisher: "72a43595-432b-46cd-8d15-3b49d08b3be2"}); 
	= csrf_meta_tags
	%link{:rel => "shortcut icon", :href => "assets/pb/favicon.jpg"}
%body
	%div#wrapper
		%div#header
			%div#wrapper
				%div#sign_status
					-if user_signed_in?
						%p
							Welcome 
							= link_to current_user.username , profile_path
							|	
							= link_to 'Sign out', destroy_user_session_path, :method => :delete
					-else
						= link_to 'Sign in', new_user_session_path
						or
						= link_to 'Register', new_user_registration_path
		%div#menu_wide
			%div#menu
				%div#logo{:style => "float:left"}
					=link_to (image_tag "logo.png"), root_path
				#links-container
					= render :partial => "layouts/menu"
		#container_wide
			#container
				%div#flash
					%span.notice
						= notice
					%span.alert
						= alert
				%br{:style => "clear:both;"}
				= yield
		= render :partial => "layouts/twitter"
		= render :partial => "layouts/footer"
		%script{:type => "text/javascript"}
			$(function() {
			$('#tweets').tweets({username:'maryon_mayor', cycle:true});
			});
		= render :partial => "layouts/bottom"
